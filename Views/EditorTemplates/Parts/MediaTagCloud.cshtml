@model Cascade.PhotoSwipe.Models.MediaTagCloudPart

<fieldset>
    <legend>Media Tag Cloud</legend>
    <span class="hint">@T("Creates a list of Tags attached to Media content items. ")</span>

    <div class="group">
        @Html.LabelFor(model => model.Buckets)
        @Html.TextBoxFor(model => model.Buckets, new { @class = "text small" })
        @Html.ValidationMessageFor(model => model.Buckets)
        <span class="hint">@T("The number of buckets determines how many different sizes of tags will get rendered in the cloud.")</span>
    </div>

    <div class="group">
        @Html.LabelFor(model => model.Slug)
        @Html.TextBoxFor(model => model.Slug, new { @class = "text medium" })
        @Html.ValidationMessageFor(model => model.Slug)
        <span class="hint">@T("Enter the slug of the container for which you want the tag fog, e.g. blog, /, or leave empty for the cloud to be scoped to the whole site. ")</span>
    </div>

    <div class="group">
        @Html.CheckBoxFor(m => m.DisplayContentCount)
        <label for="@Html.FieldIdFor(m => m.DisplayContentCount)" class="forcheckbox">@T("Display content count")</label>
        <span class="hint">@T("When checked, the number of content items is rendered following the term name.")</span>
    </div>

    <div class="group">
        @Html.CheckBoxFor(m => m.SortByPopularity)
        <label for="@Html.FieldIdFor(m => m.SortByPopularity)" class="forcheckbox">@T("Sort by popularity")</label>
        <span class="hint">@T("When checked, the menu is displayed with popular tags first. When unchecked, the menu is displayed in alphabetic order.")</span>
    </div>


</fieldset>